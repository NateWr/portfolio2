---
import { Image } from 'astro:assets';
import ContactLink from '../components/ContactLink.astro';
import FontWorkSans from '../components/FontWorkSans.astro'
import dots3Image from '../images/dots-3.png';

interface Props {
	title: string;
	description?: string;
	nav?: {href: string, text: string}[];
}

const { title, description, nav } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta property="og:title" content={title}>
		{description && (
			<meta name="description" content={description}>
			<meta name="og:description" content={description}>
			<meta name="twitter:description" content={description}>
		)}
		<FontWorkSans />
	</head>
	<body>
		<slot name="header-image" />
		{nav && (
			<header
				id="nav"
				class="
					fixed
					top-4
					left-2/4
					z-50
					bg-white
					border-2
					border-black
					px-4
					py-3
					font-mono
					font-bold
					uppercase
					text-sm
					leading-none
					whitespace-nowrap
					transition-all
					duration-300
					sm-landscape:top-2
					sm-landscape:text-xs
					sm-landscape:leading-none
					sm-landscape:py-2
					xl:top-8
				"
				style="
					--transform: translate(-50%, -4rem);
					transform: var(--transform);
				"
			>
				<nav>
					<ul
						class="
							flex
							items-center
							gap-6
						"
					>
						{nav.map((item) => (
							<li>
								<a href={item.href}>
									{item.text}
								</a>
							</li>
						))}
					</ul>
				</nav>
				<div
					id="progress"
					class="
						absolute
						left-0
						bottom-0
						bg-blue
						h-1
						transition-all
						duration-300
					"
					style="
						--width: 0%;
						width: var(--width);
					"
				></div>
			</header>
		)}
		<main>
			<slot />
		</main>
		<footer
			class="
				relative
				overflow-hidden
				pb-[10vw]
				sm-landscape:pb-[20vw]
			"
		>
			<div
				class="
					absolute
					bottom-0
					left-2/4
					-translate-x-2/4
					translate-y-2/4
					w-[200%]
					-z-50
				"
				aria-hidden="true"
			>
				<Image
					class="w-full"
					src={dots3Image}
					alt=""
				/>
			</div>
			<h2 class="sr-only">Contact</h2>
			<div
				id="contact"
				class="
					mx-6-vw
					flex
					flex-col
					items-center
				"
			>
				<div
					class="
						text-center
						text-2xl-vw
						leading-normal
						sm-landscape:max-w-sm
						sm-landscape:text-2xl
						sm-landscape:leading-normal
						sm:text-lg-vw
					"
				>
					Ready <strong>for a chat?</strong>
					Get in touch if you think I can help you with something.
				</div>
				<div
					class="
						my-12-vw
						mx-4-vw
						flex
						flex-col
						gap-6-vw
						sm-landscape:my-12
						sm-landscape:mx-4
						sm-landscape:gap-6
					"
				>
					<ContactLink href="mailto:natew+work@notthisway.com">
							<svg
								slot="svg"
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 -960 960 960"
								fill="currentColor"
							>
								<path d="M172.31-180Q142-180 121-201q-21-21-21-51.31v-455.38Q100-738 121-759q21-21 51.31-21h615.38Q818-780 839-759q21 21 21 51.31v455.38Q860-222 839-201q-21 21-51.31 21H172.31ZM480-457.69 160-662.31v410q0 5.39 3.46 8.85t8.85 3.46h615.38q5.39 0 8.85-3.46t3.46-8.85v-410L480-457.69Zm0-62.31 313.85-200h-627.7L480-520ZM160-662.31V-720v467.69q0 5.39 3.46 8.85t8.85 3.46H160v-422.31Z"/>
							</svg>
							natew+work@notthisway.com
					</ContactLink>
					<ContactLink href="https://github.com/NateWr">
						<svg
							slot="svg"
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 496 512"
							fill="currentColor"
						>
							<path d="M165.9 397.4c0 2-2.3 3.6-5.2 3.6-3.3.3-5.6-1.3-5.6-3.6 0-2 2.3-3.6 5.2-3.6 3-.3 5.6 1.3 5.6 3.6zm-31.1-4.5c-.7 2 1.3 4.3 4.3 4.9 2.6 1 5.6 0 6.2-2s-1.3-4.3-4.3-5.2c-2.6-.7-5.5.3-6.2 2.3zm44.2-1.7c-2.9.7-4.9 2.6-4.6 4.9.3 2 2.9 3.3 5.9 2.6 2.9-.7 4.9-2.6 4.6-4.6-.3-1.9-3-3.2-5.9-2.9zM244.8 8C106.1 8 0 113.3 0 252c0 110.9 69.8 205.8 169.5 239.2 12.8 2.3 17.3-5.6 17.3-12.1 0-6.2-.3-40.4-.3-61.4 0 0-70 15-84.7-29.8 0 0-11.4-29.1-27.8-36.6 0 0-22.9-15.7 1.6-15.4 0 0 24.9 2 38.6 25.8 21.9 38.6 58.6 27.5 72.9 20.9 2.3-16 8.8-27.1 16-33.7-55.9-6.2-112.3-14.3-112.3-110.5 0-27.5 7.6-41.3 23.6-58.9-2.6-6.5-11.1-33.3 2.6-67.9 20.9-6.5 69 27 69 27 20-5.6 41.5-8.5 62.8-8.5s42.8 2.9 62.8 8.5c0 0 48.1-33.6 69-27 13.7 34.7 5.2 61.4 2.6 67.9 16 17.7 25.8 31.5 25.8 58.9 0 96.5-58.9 104.2-114.8 110.5 9.2 7.9 17 22.9 17 46.4 0 33.7-.3 75.4-.3 83.6 0 6.5 4.6 14.4 17.3 12.1C428.2 457.8 496 362.9 496 252 496 113.3 383.5 8 244.8 8zM97.2 352.9c-1.3 1-1 3.3.7 5.2 1.6 1.6 3.9 2.3 5.2 1 1.3-1 1-3.3-.7-5.2-1.6-1.6-3.9-2.3-5.2-1zm-10.8-8.1c-.7 1.3.3 2.9 2.3 3.9 1.6 1 3.6.7 4.3-.7.7-1.3-.3-2.9-2.3-3.9-2-.6-3.6-.3-4.3.7zm32.4 35.6c-1.6 1.3-1 4.3 1.3 6.2 2.3 2.3 5.2 2.6 6.5 1 1.3-1.3.7-4.3-1.3-6.2-2.2-2.3-5.2-2.6-6.5-1zm-11.4-14.7c-1.6 1-1.6 3.6 0 5.9 1.6 2.3 4.3 3.3 5.6 2.3 1.6-1.3 1.6-3.9 0-6.2-1.4-2.3-4-3.3-5.6-2z"/>
						</svg>
						github.com/NateWr
					</ContactLink>
				</div>
			</div>
		</footer>
		<script src="../scripts/index.ts"></script>
	</body>
</html>

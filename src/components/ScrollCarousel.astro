---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
	title: string;
  background: ImageMetadata;
}

const { title, background } = Astro.props;
---
<section
  class="
    my-[50vh]
  "
>
  <div
    class="
      mx-6-vw
      flex
      flex-col
      items-center
    "
  >
    <h2 class="sr-only">{{ title }}</h2>
    <div
      class="
        text-center
        text-2xl-vw
        leading-normal
        sm:text-lg-vw
        sm:max-w-[70vw]
        sm-landscape:max-w-sm
        sm-landscape:text-2xl
        sm-landscape:leading-normal
      "
    >
      <slot name="description" />
    </div>
  </div>
  <div
    class="
      relative
      w-full
      overflow-hidden
      pt-24
    "
  >
    <div
      class="
        absolute
        top-1/3
        left-1/2
        -translate-x-1/2
        -translate-y-1/2
        -z-10
        h-[600px]
        w-[1200px]
      "
      aria-hidden="true"
    >
      <Image
        src={background}
        alt=""
      />
    </div>
    <div
      class="
        flex
        items-end
      "
    >
      <slot />
    </div>
  </div>
</section>
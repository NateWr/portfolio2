---
import type { ImageMetadata } from 'astro';
import Screenshot from '../components/Screenshot.astro';
import Arrow from './Arrow.astro';


interface Props {
  title: string;
  client: string;
  date: string;
  url: string;
  image: ImageMetadata;
  color: string;
  alt?: string;
}

const { title, client, date, url, image, color, alt = '' } = Astro.props;
---

<a
  class="
    portfolio-item
    relative
    shrink-0
    p-16
    sm-landscape:py-2
    sm-landscape:px-8
  "
  href={url}
  style={`
    --color: ${color};
  `}
  data-blur="true"
>
  <div
    class="
      portfolio-item-blur
      flex
      flex-col
      items-start
    "
  >
    <Screenshot
      image={image}
      alt={alt}
    />
    <div
      class="
        mt-4
        flex
        items-center
        gap-4
        w-full
        text-base
        leading-tight
        3xl:text-lg
        3xl:leading-tight
      "
    >
      <div>
        <h3
          class="
            font-bold
          "
        >
          {title}
        </h3>
        <div>{client}</div>
      </div>
      <div class="relative flex-grow">
        <Arrow />
      </div>
    </div>
    <div
      class="
        mt-2
        text-sm
        font-bold
        uppercase
        3xl:text-base
        3xl:leading-tight
      "
    >
      {date}
    </div>
  </div>
</a>

<style>
  .portfolio-item:after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 140%;
    inset: 0;
    z-index: -1;
    mask: radial-gradient(farthest-side, black 75%, transparent);
    backdrop-filter: blur(3px);
  }

  .portfolio-item-blur {
    transition: all 0.5s;
    filter: blur(0);
    transform: scale(1);
    transform-origin: center bottom;
  }

  .portfolio-item[data-blur="true"] {

    &:after {
      mask: none;
      backdrop-filter: none;
    }

    & .portfolio-item-blur {
      transition: all 0.5s;
      filter: blur(10px);
      transform: scale(0.5);
    }
  }

</style>